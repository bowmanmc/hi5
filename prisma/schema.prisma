generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "postgresql://h5:h5@localhost:5432/h5?schema=public"
}

model hi5 {
  id          Int       @id @default(autoincrement())
  recipient   String
  author      String
  corevalue   String
  impact      String
  description String
  gif         String
  likes       like[]
  created     DateTime  @default(now())
  updated     DateTime  @updatedAt
}

model like {
  id        Int       @id @default(autoincrement())
  hi5       hi5       @relation(fields: [hi5Id], references: [id])
  hi5Id     Int
  user      String
  created   DateTime  @default(now())
}

model user {
  email     String      @id
  name      String
  pic       String
  created   DateTime    @default(now())
  updated   DateTime    @updatedAt
}
